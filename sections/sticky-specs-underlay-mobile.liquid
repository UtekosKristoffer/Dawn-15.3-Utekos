<div class="sticky-section-wrapper">
  <section id="section-a" class="sticky-wrapper">
    <!-- Venstreside: Bilde + Tabs -->
    <div class="sticky-left">
      <!-- Overskrift -->
      <h2 class="sticky-heading">{{ section.settings.heading }}</h2>

      <!-- Tabs -->
      <div class="tabs">
        <button onclick="switchImage(1)" class="tab-button active">{{ section.settings.tab_1 }}</button>
        <button onclick="switchImage(2)" class="tab-button">{{ section.settings.tab_2 }}</button>
        <button onclick="switchImage(3)" class="tab-button">{{ section.settings.tab_3 }}</button>
      </div>

      <!-- Produktbilde -->
      <div class="image-wrapper">
        {% if section.settings.image_1 %}
          <img id="productImage" src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Produktbilde">
        {% endif %}
      </div>
    </div>

    <!-- Høyreside: Spesifikasjoner -->
    <div class="specs-content">
      {% for block in section.blocks %}
        <div class="spec-block">
          <h3>{{ block.settings.title }}</h3>

          {% for i in (1..5) %}
            {% capture subtitle_id %}subtitle_{{ i }}{% endcapture %}
            {% capture description_id %}description_{{ i }}{% endcapture %}

            {% assign subtitle = block.settings[subtitle_id] %}
            {% assign description = block.settings[description_id] %}

            {% if subtitle or description %}
              {% if subtitle %}
                <h4>{{ subtitle }}</h4>
              {% endif %}
              {% if description %}
                <p>{{ description }}</p>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </section>
</div>

{% style %}
  .sticky-wrapper {
    display: flex;
    flex-direction: row;
    place-self: center;
    gap: 4rem;
    padding: 2rem 4rem 0rem 0rem;
    background: black;
    color: white;
    width: 100%;
    justify-content: space-between;
  }

  .sticky-section-wrapper {
    background-color: #000; /* Samme som sticky-wrapper */
    padding-top: 2rem;
    padding-bottom: 4rem;
  }

  .sticky-left {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    height: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* Endret fra center til flex-start */
    text-align: center;
    flex: 1;
    max-width: 55rem;
    padding-top: 6.8rem;
  }

  .sticky-heading {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    text-align: left;
    font-size: 3rem;
    margin: 0;
    padding: 0 0;
    font-family: var(--font-alt-family);
    font-weight: 500;
    font-style: normal;
    color: white;
    padding-left: 9rem;
  }

  .image-wrapper img {
    max-width: 80rem;
    object-fit: contain;
    padding-top: 2rem;
    padding-left: 40rem;
  }

  .specs-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 60rem;
    padding-top: 6.2rem;
    padding-right: 30rem;
  }

  .tabs {
    display: flex;
    gap: 0rem;
    margin-bottom: 1rem;
    background-color: transparent;
    border-radius: 0px;
    justify-content: center;
    font-family: var(--font-alt-family);
    padding-left: 40rem;
  }

  .tab-button {
    padding: 0.8rem 1.6rem;
    color: white;
    border-radius: 0px;
    border: none;
    cursor: pointer;
    background-color: transparent;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: normal;
    font-size: 1.4rem;
  }

  .tab-button:first-child {
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
  }

  .tab-button:last-child {
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .tab-button.active {
    background-color: #1d1d1d;
    font-weight: 500;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    border-radius: 2rem;
  }

  .spec-block {
    border-top: 1.5px solid white;
    padding-top: 1rem;
    margin-bottom: 1rem;
  }

  .spec-block h3 {
    padding: 0 0 0.4rem;
    font-size: 2.2rem;
    margin: 0 0;
    font-family: 'DIN Next LT Pro', sans-serif;
    font-weight: 500;
    font-style: normal;
    color: white;
  }

  .spec-block h4 {
    font-size: 1.3rem;
    font-weight: 500;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    color: white;
    margin: 0 0;
    font-family: 'DIN Next LT Pro', sans-serif;
    font-weight: 500;
    font-style: normal;
  }

  .spec-block p {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    font-size: 1.3rem;
    line-height: 1.6;
    margin: 0 0;
    font-family: 'DIN Next LT Pro', sans-serif;
    font-weight: normal;
    font-style: normal;
    color: #f5f5f5;
  }

  @media screen and (max-width: 749px) {
    .sticky-wrapper {
      flex-direction: column;
      padding: 2rem 1rem;
    }

    .specs-content {
      display: none;
    }

    .sticky-left {
      position: sticky;
      top: 0;
      height: 100vh;
    }

    .image-wrapper img {
      max-height: 60vh;
    }
  }
  @media only screen and (min-width: 750px) and (max-width: 940px) {
    .sticky-section-wrapper {
      display: none;
      padding-top: 3.5rem;
    }
    .sticky-heading {
      padding-left: 4rem;
      padding-bottom: 0rem;
    }

    .sticky-wrapper {
      gap: 2rem;
      padding: 2rem 10rem 0rem 3rem;
    }

    .image-wrapper img {
      place-self: center;
      display: flex !important;
      max-height: 50vh !important;
    }

    .spec-block p {
      padding-top: 0.3rem;
      padding-bottom: 0.3rem;
    }

    .spec-block h4 {
      padding-bottom: 0.2rem;
      padding-top: 0.2rem;
    }

    .sticky-left {
      padding-top: 1.1rem;
    }

    .spec-block h3 {
      font-size: 1.8rem;
    }
  }
{% endstyle %}

<script>
  function switchImage(index) {
    const image = document.getElementById('productImage');
    const images = [
      "{{ section.settings.image_1 | img_url: 'master' }}",
      "{{ section.settings.image_2 | img_url: 'master' }}",
      "{{ section.settings.image_3 | img_url: 'master' }}",
    ];
    image.src = images[index - 1];

    document.querySelectorAll('.tab-button').forEach((btn) => btn.classList.remove('active'));
    document.querySelectorAll('.tab-button')[index - 1].classList.add('active');
  }
</script>

