{% schema %}
{
  "name": "Henvendelsesseksjon",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Kundeservice"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Undertekst",
      "default": "<p><strong>Kontakt oss</strong><br><br>Har du sp√∏rsm√•l, √∏nsker eller tilbakemeldinger? Vi h√∏rer gjerne fra deg!<br><br>Fyll ut skjemaet nedenfor, s√• kontakter vi deg s√• snart vi har mulighet ‚Äì som oftest innen √©n virkedag.<br><br>Du er ogs√• velkommen til √• ta kontakt direkte:<br>üìû <strong>Telefon:</strong> +47 40 21 63 43<br>‚úâÔ∏è <strong>E-post:</strong> <a href=\"mailto:info@utekos.no\">info@utekos.no</a></p>"
    }
  ]
}
{% endschema %}

<section class="hen-clean-section">
  <div class="hen-container">
    {% if section.settings.heading != blank %}
      <h2 class="hen-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div class="hen-subheading">{{ section.settings.subheading }}</div>
    {% endif %}

    <form method="post" action="/contact#form_area" id="form_area" accept-charset="UTF-8" class="form-wrapper">
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="‚úì">

      <div class="form-group">
        <label for="FormName">Navn</label>
        <input type="text" id="FormName" name="contact[name]" placeholder="Fullt navn" required>
      </div>

      <div class="form-group">
        <label for="FormPhone">Telefonnummer</label>
        <input type="tel" id="FormPhone" name="contact[phone]" placeholder="+47 000 00 000">
      </div>

      <div class="form-group">
        <label for="FormEmail">E-post</label>
        <input type="email" id="FormEmail" name="contact[email]" placeholder="navn@eksempel.com" required>
      </div>

      <div class="form-group">
        <label for="FormMessage">Kommentar</label>
        <textarea
          rows="5"
          id="FormMessage"
          name="contact[body]"
          placeholder="Skriv din melding her..."
          required
        ></textarea>
      </div>

      <button type="submit" class="form-button">Send inn</button>
    </form>
  </div>
</section>

{%- style -%}
  .hen-clean-section {
    padding: 2.5rem 1rem 4rem 1rem;
    background-color: rgb(245, 245, 245);
    display: flex;
    justify-content: left;
  }

  .hen-container {
    max-width: 700px;
    width: 100%;
    padding-left: 7rem;
  }

  .hen-heading {
    font-size: 3.8rem;
    text-align: left;
    margin: 2rem 0rem !important;
    color: rgb(29, 29, 29);
    font-family: var(--font-alt-family) !important;
    font-weight: normal !important;
    font-style: normal !important;
  }

  .hen-subheading {
    text-align: left;
    margin-bottom: 2rem;
    color: rgb(29, 29, 29);
    font-family: var(--font-alt-family) !important;
    font-weight: 500 !important;
    font-size: 1.4rem !important;
  }

  .hen-clean-section a:-webkit-any-link {
    color: rgb(29, 29, 29) !important;
    cursor: pointer;
    text-decoration: underline;
  }

  .form-wrapper .form-group {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    font-family: var(--font-alt-family) !important;
  }

  .form-wrapper label {
    margin-bottom: 0.5rem;
    color: rgb(29, 29, 29);
    font-family: var(--font-alt-family) !important;
    font-weight: normal !important;
    font-style: normal;
    font-size: 1.2rem !important;
  }

  .form-wrapper input,
  .form-wrapper textarea {
    padding: 0.8rem 1rem;
    border: 1px solid rgb(29, 29, 29);
    border-radius: 0.6rem;
    font-size: 1.5rem;
    font-family: var(--font-alt-family) !important;
    font-weight: normal !important;
    font-style: normal;
  }

  .form-wrapper input {
    padding-top: 1.4rem !important;
    padding-bottom: 1.6rem !important;
  }

  .form-button {
    background-color: rgb(41, 50, 106);
    color: white;
    padding: 1rem 2rem;
    font-size: 1.4rem;
    border: none;
    border-radius: 0.6rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-family: var(--font-alt-family) !important;
    font-weight: normal !important;
    font-style: normal;
  }

  .form-button:hover {
    background-color: #1f254f;
  }

  @media (max-width: 768px) {
    .hen-clean-section {
      padding: 1.5rem 1rem 3rem 1rem;
    }

    .hen-container {
      padding-left: 0.1rem;
    }

    .hen-heading {
      font-size: 2.5rem;
      margin: 0.5rem 0rem !important;
    }

    .form-button {
      width: 100%;
      font-size: 1.2rem;
    }
  }
{%- endstyle -%}
