{% style %}
      #section-{{ section.id }} {
        position: relative;
        display: flex;
        background: radial-gradient(
        500px 300px ellipse at 40% 40%,
        oklch(70% 0.5 230) 0%,
         oklch(25% 0.12 273) 120%
      );
        max-width: 100vw;
        width: 100%;
        height: fit-content;
        font-size: 1.4rem;
        border-top-left-radius: 2rem;
        border-top-right-radius: 2rem;
        backdrop-filter: blur(50px)
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        padding: 6rem 8rem;
      }

      #section-{{ section.id }} .content-wrapper {
        position: relative;
        margin: 0 auto;
        width: 100%;
        max-width: 100vw;
        height: fit-content;
        display: flex;
        flex-direction: column;
      }

      #section-{{ section.id }} .flow-wrapper {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        width: 100%;
        max-width: 100vw;
        position: relative;
      }

      #section-{{ section.id }} .cowerflow-header {
        font-size: 6.5rem;
        margin-bottom: 0;
        font-weight: normal;
        font-style: normal;
        letter-spacing: -1px;
      }

      #section-{{ section.id }} .animated-text {
        display: flex;
        flex-wrap: wrap;
        row-gap: 0.1rem;
        column-gap: 1rem;
        font-size: 4.4rem;
        font-family: "DIN Next Rounded LT Pro", sans-serif;
        font-weight: normal;
        font-style: normal;
        line-height: 1.2;
        margin: 0;
        padding-bottom: 3.5rem;
        letter-spacing: -1.8px;
        position: relative;

      }

    #section-{{ section.id }} .set {
      color: black;
      animation: cycleText 20s steps(10) infinite;
      transition: color 0.3s ease;
      cursor: default;
    }

    #section-{{ section.id }} .set:nth-child(1) { animation-delay: 0s; }
    #section-{{ section.id }} .set:nth-child(2) { animation-delay: 2s; }
    #section-{{ section.id }} .set:nth-child(3) { animation-delay: 4s; }
    #section-{{ section.id }} .set:nth-child(4) { animation-delay: 6s; }
    #section-{{ section.id }} .set:nth-child(5) { animation-delay: 8s; }
    #section-{{ section.id }} .set:nth-child(6) { animation-delay: 10s;}
    #section-{{ section.id }} .set:nth-child(7) { animation-delay: 12s; }
    #section-{{ section.id }} .set:nth-child(8) { animation-delay: 14s; }
    #section-{{ section.id }} .set:nth-child(9) { animation-delay: 16s; }
    #section-{{ section.id }} .set:nth-child(10) { animation-delay: 18s; }

    @keyframes cycleText {
    0%, 9.99%   { color: white; }
    10%, 100%   { color: black; }
  }

   #section-{{ section.id }} .set:nth-child(1) {
   color:oklch(0.68 0.212 40.59) !important;
   }

   #section-{{ section.id }} .set:hover {
    color:oklch(0.68 0.212 40.59) !important;
      }

      #section-{{ section.id }} .swiper-group-container {
        display: flex;
        flex-direction: column;
        width: 100%;
        flex-shrink: 1;
        max-width: 100vw;
        position: relative;
      }

      #section-{{ section.id }} .swiper {
        width: 100%;
      }

      #section-{{ section.id }} .swiper-wrapper {
        display: flex;
        position: relative;
        max-width: 100%;
        width: 100%;
        height: fit-content;
        flex-shrink: 1;
      }

      #section-{{ section.id }} .swiper-slide {
        border-radius: 1rem;
        background-color:oklch(0.68 0.212 40.59);
        aspect-ratio: 5/6;
      }

      #section-{{ section.id }} .swiper-slide img {
        width: 100%;
        aspect-ratio: 5/6;
        object-fit: cover;
        border-radius: inherit;
        transition: transform 0.3s ease;
        objekt-position: center;
      }

        #section-{{ section.id }} .swiper-scrollbar {
        height: 8px;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
        margin-top: 8px;
      }

      #section-{{ section.id }} .swiper-scrollbar-drag {
        background-color: black;
        border-radius: 8px;
        height: 100%;
        width: 100%;
        transition: width 0.3s ease;
      }

      #section-{{ section.id }} .product-info {
        text-align: left;
        margin-top: 1rem;
      }

      #section-{{ section.id }} .product-info h3 {
        font-size: 1.6rem;
        margin-bottom: 0.5rem;
      }

      #section-{{ section.id }} .original-price {
        text-decoration: line-through;
        opacity: 1;
        color:oklch(0.68 0.212 40.59);
        font-weight: 500;
      }

      #section-{{ section.id }} .sale-price,
      #section-{{ section.id }} .original-price {
        font-weight: normal;
      }

      #section-{{ section.id }} .button-container {
        display: flex;
        wrap: wrap;
        gap: 3rem;
        justify-content: flex-start;
        padding-top: 1em;
      }

      #section-{{ section.id }} .btn,
      #section-{{ section.id }} .hover-btn {
        background-color: #000;
        color: #fff;
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
        border-radius: 1.2rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
      }

      #section-{{ section.id }} .hover-btn {
        opacity: 0;
      }

      #section-{{ section.id }} .btn:hover,
      #section-{{ section.id }} .hover-btn:hover {
        background-color: #333;
        opacity: 0.8;
      }

      @media (min-width: 750px) {
   #section-{{ section.id }} .set:nth-child(8) {
    margin-right: 150px;
   }
  }

      @media (max-width: 749px) {
        #section-{{ section.id }} {
          padding: 5rem 2.5rem;
        }

        #section-{{ section.id }} .flow-wrapper {
          grid-template-columns: repeat(2, 1fr);
          gap: 1.5rem;
        }

        #section-{{ section.id }} .product-info h3 {
          font-size: 1.1rem;
        }

        #section-{{ section.id }} .button-container {
          gap: 0.5rem;
        }

        #section-{{ section.id }} .btn {
          font-size: 0.8rem;
          padding: 0.5rem 1rem;
        }
      }
{% endstyle %}

<script src='{{ 'swiper-bundle.js' | asset_url }}' defer='defer'></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const section = document.querySelector('#section-{{ section.id }}');
    if (!section) return;

    const swipers = section.querySelectorAll('.swiper');

    swipers.forEach((swiperEl) => {
      const scrollbarEl = swiperEl.parentElement.querySelector('.swiper-scrollbar');
      const slideCount = swiperEl.querySelectorAll('.swiper-slide').length;
      if (slideCount === 0) return;

      new Swiper(swiperEl, {
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: 'auto',
        initialSlide: 0,
        loop: true,
        loopAdditionalSlides: 1,
        spaceBetween: 1,
        speed: 600,
        coverflowEffect: {
          rotate: 180,
          stretch: 0,
          depth: 5000,
          modifier: 1,
          slideShadows: true,
        },
        preloadImages: true,
        lazy: {
          loadPrevNext: true,
          loadPrevNextAmount: 5,
          loadOnTransitionStart: false,
        },
        scrollbar: {
          el: scrollbarEl,
          draggable: true,
          hide: false,
          dragSize: 40,
          speed: 1000,
        },
        observer: true,
        observeParents: true,
        observeSlideChildren: true,
        watchSlidesProgress: true,
        watchSlidesVisibility: true,
        watchOverflow: true,
        touchEventsTarget: 'container',
        simulateTouch: true,
        followFinger: true,
        on: {
          init() {
            this.update();
            this.slideToLoop(0, 0, false);
          },
          imagesReady() {
            this.update();
          },
        },
      });
    });
  });
</script>

