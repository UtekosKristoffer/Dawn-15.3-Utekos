{% style %}
  .swiper-product-section {
    position: relative;
    padding: 0 0;
    position: relative;
  }

  * {
    box-sizing: border-box;
  }

  img {
    max-width: 100%;
  }

  a {
    text-decoration: none;
  }

  .swiper-product-section .icon {
    display: inline-block;
    width: 1.2em;
    height: 1.2em;
    stroke-width: 0;
    stroke: currentColor;
    fill: currentColor;
    place-items: center;
    justify-content: center;
  }

  .swiper-product-section .wrapper {
    width: 100%;
    height: 100vh;
    min-height: 750px;
    background: url(https://res.cloudinary.com/doqxtgho6/image/upload/v1745823024/Bakgrunn-55_nc74bw.png) center
      no-repeat;
    background-size: cover;
    position: relative;
    overflow: hidden;
    display: flex;
    border-top-left-radius: 3rem;
    border-top-right-radius: 3rem;
  }

  @media screen and (max-width: 992px) {
    .swiper-product-section .wrapper {
      height: auto;
      min-height: 100vh;
    }
  }

  .swiper-product-section .content {
    height: 600px;
    margin: auto;
    width: 100%;
    max-width: 1050px;
    display: flex;
    align-items: center;
    position: relative;
  }

  @media screen and (max-width: 1200px) {
    .swiper-product-section .content {
      max-width: 920px;
    }
  }
  @media screen and (max-width: 992px) {
    .swiper-product-section .content {
      max-width: 920px;
      margin-top: 100px;
      height: auto;
      min-height: 100vh;
    }
  }
  @media screen and (max-width: 767px) {
    .content {
      margin-top: 20px;
    }
  }
  @media screen and (max-width: 576px) {
    .content {
      margin-top: 20px;
      margin-bottom: 20px;
    }
  }

  .bg-shape {
    height: 100%;
    width: 50%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    border-radius: 20px;
    padding: 45px 40px;
    background: var(--color-dark-blue);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2); /* Lys kant */
  }

  @media screen and (max-width: 1200px) {
    .bg-shape {
      width: 45%;
    }
  }
  @media screen and (max-width: 992px) {
    .bg-shape {
      width: 90%;
      height: 290px;
      align-items: flex-start;
      padding: 50px;
      left: 50%;
      transform: translateX(-50%);
    }
  }
  @media screen and (max-width: 767px) {
    .bg-shape {
      padding: 30px;
      width: 95%;
      border-radius: 20px;
    }
  }
  @media screen and (max-width: 576px) {
    .bg-shape {
      height: 200px;
      padding: 30px;
    }
  }

  @media screen and (max-width: 1200px) {
    .bg-shape img {
      width: 430px;
      left: 10px;
    }
  }
  @media screen and (max-width: 992px) {
    .bg-shape img {
      transform: none;
      width: 100%;
      position: relative;
      left: auto;
      margin-left: auto;
      margin-right: auto;
      object-fit: contain;
      height: 100%;
      object-position: top center;
    }
  }

  .next,
  .prev {
    z-index: 22;
    border: none;
    width: 63px;
    height: 63px;
    border-radius: 50%;
    font-size: 33px;
    color: black;
    top: 50%;
    position: absolute;
    outline: none;
    cursor: pointer;
    font-weight: 900;
    background-color: var(--color-gray-50);
    display: flex;
    justify-content: center;
  }

  .prev svg,
  .next svg {
    width: 2rem; /* Størrelse på ikonene */
    height: 2rem;
    fill: black;
    place-self: center !important;
    display: inline-block;
    margin: 0;
  }

  /* Hvis du vil fade ut disabled knapper */
  .prev.disabled,
  .next.disabled {
    opacity: 0.3;
    pointer-events: none;
  }
  .next.disabled,
  .prev.disabled {
    cursor: not-allowed;
  }
  .next:focus,
  .prev:focus {
    outline: none;
  }
  @media screen and (max-width: 992px) {
    .next,
    .prev {
      top: 170px;
    }
  }

  .prev {
    left: -30%;
    transform: translate(-100%, -50%);
  }
  @media screen and (max-width: 1200px) {
    .prev {
      left: -21%;
    }
  }
  @media screen and (max-width: 992px) {
    .prev {
      left: 0;
      transform: translate(-50%, -50%);
    }
  }
  @media screen and (max-width: 576px) {
    .prev {
      transform: translate(20%, -50%);
    }
  }

  .next {
    right: 0;
    transform: translate(50%, -50%);
  }
  @media screen and (max-width: 576px) {
    .next {
      transform: translate(-20%, -50%);
    }
  }

  .swiper-product-section .product-slider {
    width: 75%;
    height: 85%;
    border-radius: 30px;
    box-shadow: 0 28px 79px 0 rgba(10, 22, 31, 0.35);
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
