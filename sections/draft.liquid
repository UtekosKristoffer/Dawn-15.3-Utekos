{% comment -%}
  {%- liquid
    assign product_form_id = 'product-form-' | append: section.id
    assign product_to_display = product

    if product_to_display == blank and section.settings.featured_product != blank
      if section.settings.featured_product.handle
        assign product_handle_to_fetch = section.settings.featured_product.handle | default: section.settings.featured_product
        assign product_to_display = all_products[product_handle_to_fetch]
      else
        assign product_to_display = section.settings.featured_product
      endif
    endif
  -%}
  <section
    id='section-{{ section.id }}'
    class='product-preview-section bg-light-bg px-2 py-12 max-w-[1500px] mx-auto md:px-0 md:pt-36'
    data-section-id='{{ section.id }}'
    data-product-form-id='{{ product_form_id }}'
    data-money-format='{{ shop.money_format | json | escape }}'
    data-product-json='{{ product_to_display | json | escape }}'
    aria-labelledby='product-title-{{ section.id }}'
  >
    <script>
      window.metaobjectImagesData = {
        {%- for variant in product_to_display.variants -%}
          "{{ variant.id }}":
            {%- assign metaobject_reference_list = variant.metafields.ref.items_variants.value -%}
            {%- if metaobject_reference_list.size > 0 -%}
              {%- assign img_mo_ref = metaobject_reference_list.first -%}
              {%- assign images_data = "[]" -%}
              {%- if img_mo_ref and img_mo_ref.images and img_mo_ref.images.value != blank -%}
                {%- assign images_data = img_mo_ref.images.value | json -%}
              {%- endif -%}
              {{ images_data }}
            {%- else -%}
              []
            {%- endif -%}
          {%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      };
      console.log('Final window.metaobjectImagesData:', window.metaobjectImagesData);
    </script>

    <div class='product-preview-container md:min-w-[1400px] container mx-auto'>
      <form
        method='post'
        action='{{ routes.cart_add_url }}'
        id='{{ product_form_id }}'
        accept-charset='UTF-8'
        class='shopify-product-form'
        enctype='multipart/form-data'
        novalidate='novalidate'
      >
        <input type='hidden' name='form_type' value='product'>
        <input type='hidden' name='utf8' value='✓'>
        <input
          type='hidden'
          name='id'
          value='{{ product_to_display.selected_or_first_available_variant.id }}'
          data-product-variant-id-input
        >

        <header class='product-header py-8 md:py-14 lg:py-16 pl-2 md:pl-36 lg:pl-42'>
          <h1 class='product-preview-header' id='product-title-{{ section.id }}'>
            {{ product_to_display.title | default: 'Produktnavn' }}
          </h1>
          <p class='product-preview-subtext'>
            {{ 'products.product.designet_for_eventyr' | t | default: 'Designet for eventyr' }}
          </p>
        </header>

        <div class='product-layout-grid grid grid-cols-1 md:grid-cols-[75%_25%] size-full md:gap-x-8  px-2 md:px-12 md:pb-10'>
          <div class='product-gallery-column rounded-3xl bg-finance-white z-50 md:sticky max-h-[650px] w-full mx-auto md:top-[110px]'>
            <div
              class='swiper-container-wrapper mx-auto size-full md:rounded-3xl'
              role='region'
              aria-label='{{ 'products.product.media.images_label' | t | default: 'Produktbilder' }}'
            >
              <div class='swiper product-details-swiper h-[600px]'>
                <div class='swiper-wrapper w-[800px]'></div>
                <button
                  type='button'
                  class='swiper-button swiper-button-next group'
                  aria-label='{{ 'general.slider.next_slide' | t | default: 'Neste bilde' }}'
                >
                  <span class='sr-only'>
                    {{ 'general.slider.next_slide' | t | default: 'Neste bilde' }}
                  </span>
                </button>
                <button
                  type='button'
                  class='swiper-button swiper-button-prev group'
                  aria-label='{{ 'general.slider.previous_slide' | t | default: 'Forrige bilde' }}'
                >
                  <span class='sr-only'>
                    {{ 'general.slider.previous_slide' | t | default: 'Forrige bilde' }}
                  </span>
                </button>
              </div>
            </div>
          </div>

          <div class='product-options-column md:pl-6 lg:px-8'>
            <div class='product-options-content'>
              <div class='product-options-grid-container font-alt-family md:my-16 mb-6'>
                {%- assign size_option_name_setting = section.settings.size_option_name
                  | default: 'Størrelse'
                -%}
                {%- comment %} Størrelsesvalg-blokk START {%- endcomment %}
                {%- assign size_option_name_setting = section.settings.size_option_name
                  | default: 'Størrelse'
                -%}
                {%- assign size_option_object = product_to_display.options_with_values
                  | where: 'name', size_option_name_setting
                  | first
                -%}

                {% if size_option_object %}
                  <div class='variant-selector variant-selector--size space-y-4 md:space-y-6'>
                    <div class='variant-selector__header'>
                      <h2 class='text-lg md:text-xl font-medium text-[var(--color-heading-gray)]'>
                        {{ size_option_object.name | escape }}
                      </h2>
                    </div>
                    <div class='flex items-center justify-between text-sm'>
                      <a
                        href='{{ section.settings.size_guide_url | default: 'https://www.utekos.no/pages/utekos/storrelsesguide-xpc31mav' }}'
                        class='text-[var(--color-link-blue)] hover:underline'
                        target='_blank'
                        rel='noopener'
                        aria-label='{{ 'products.product.size_guide_label' | t | default: 'Størrelsesguide (åpnes i ny fane)' }}'
                      >
                        {{
                          'products.product.size_guide_link'
                          | t
                          | default: 'Mål og temperatursoner'
                        }}
                      </a>
                      {%- assign gender_option_name = 'Kjønn' -%}
                      {%- assign gender_option_object = product_to_display.options_by_name[gender_option_name] -%}
                      {% if gender_option_object and gender_option_object.values contains 'Unisex' %}
                        <span class='text-[var(--color-subtext-gray)]'>(UNISEX)</span>
                      {% endif %}
                    </div>

                    <fieldset
                      class='variant-selector__options'
                      role='radiogroup'
                      aria-labelledby='size-selection-heading-{{ section.id }}'
                    >
                      <legend class='sr-only' id='size-selection-heading-{{ section.id }}'>
                        {{
                          'products.product.choose_options'
                          | t: option_name: size_option_object.name
                        }}
                      </legend>
                      {% for size_value_raw in size_option_object.values %}
                        {%- liquid
                          assign display_size_value = size_value_raw
                          assign size_value_handle = size_value_raw | downcase | handleize
                          case size_value_handle
                            when 's'
                              assign display_size_value = 'Small'
                            when 'm'
                              assign display_size_value = 'Medium'
                            when 'l'
                              assign display_size_value = 'Large'
                            when 'xs-s'
                              assign display_size_value = 'XS/S'
                            when 'ml-l'
                              assign display_size_value = 'M/L'
                            when 'l-xl'
                              assign display_size_value = 'L/XL'
                          endcase

                          assign current_section_id_for_size = section.id
                          assign input_id_base_size = 'option-' | append: current_section_id_for_size | append: '-' | append: size_option_object.name | handle | append: '-'
                          assign input_id = input_id_base_size | append: size_value_handle
                        -%}
                        <div class='variant-option variant-option--size'>
                          <input
                            type='radio'
                            name='options[{{ size_option_object.name | escape }}]'
                            id='{{ input_id }}'
                            value='{{ size_value_raw | escape }}'
                            class='sr-only product-option-input peer'
                            data-option-index='option{{ size_option_object.position }}'
                            {% if size_option_object.selected_value == size_value_raw %}
                              checked
                            {% endif %}
                            aria-label='{{ display_size_value }}'
                          >
                          <label
                            for='{{ input_id }}'
                            class='variant-option__label flex w-full cursor-pointer items-center justify-between rounded-2xl border border-[var(--color-heading-gray)]/90 px-4 py-3 md:py-4 transition-colors duration-150 hover:bg-gray-50 peer-checked:border-pri-black peer-checked:border-2 peer-focus-visible:ring-2 peer-focus-visible:ring-[var(--color-link-blue)] peer-focus-visible:ring-offset-1'
                          >
                            <span class='variant-option__name text-base md:text-lg text-[var(--color-heading-gray)]'>
                              {{ display_size_value }}
                            </span>
                            {%- liquid
                              assign show_measures = false
                              if product_to_display.id == 7710040391928 or product_to_display.id == 7710040752376
                                assign show_measures = true
                              endif
                            -%}
                            {% if show_measures %}
                              {%- assign measures_key = size_value_handle | prepend: 'cm_' -%}
                              {%- assign measures = metaobjects.dimensions[measures_key] -%}
                              {% if measures %}
                                <ul class='variant-option__details text-xs md:text-sm text-right text-subtext-gray space-y-0.5'>
                                  <li>Lengde til hals: {{ measures.top_base }}</li>
                                  <li>Senter til ermetupp: {{ measures.center_wrist }}</li>
                                  <li>Flatmål (bunn): {{ measures.flat_size }}</li>
                                </ul>
                              {% endif %}
                            {% endif %}
                          </label>
                        </div>
                      {% endfor %}
                    </fieldset>
                  </div>
                {% endif %}
                {%- comment %} Størrelsesvalg-blokk SLUTT {%- endcomment %}

                {%- comment %} Fargevalg-blokk START {%- endcomment %}
                {%- assign color_option_name_setting = section.settings.color_option_name
                  | default: 'Farge'
                -%}
                {%- assign color_option_object = product_to_display.options_by_name[color_option_name_setting] -%}

                {% if color_option_object and color_option_object.values.size > 0 %}
                  <div class='variant-selector variant-selector--color space-y-4 md:space-y-6 mt-8 md:mt-12'>
                    <div class='variant-selector__header text-left mb-4 md:mb-6'>
                      <h2 class='sr-only'>{{ color_option_object.name | escape }}</h2>
                      <div class='flex flex-row items-baseline'>
                        <h3 class='color-selector-intro-main text-left text-3xl md:text-4xl font-medium text-[var(--color-heading-gray)] font-alt-family'>
                          Finish.
                        </h3>
                        <p class='slide-selector-intro-beta self-center ml-3 md:ml-4 text-xl md:text-2xl font-normal text-[var(--color-subtext-gray)] font-alt-family'>
                          Velg din favorittfarge
                        </p>
                      </div>
                    </div>

                    <fieldset
                      class='variant-selector__options space-y-3 md:space-y-4'
                      role='radiogroup'
                      aria-labelledby='color-selection-heading-{{ section.id }}'
                    >
                      <legend class='sr-only' id='color-selection-heading-{{ section.id }}'>
                        {{
                          'products.product.choose_options'
                          | t: option_name: color_option_object.name
                        }}
                      </legend>

                      {% for color_value in color_option_object.values %}
                        {%- liquid
                          assign color_value_handle = color_value | handle

                          assign current_section_id_for_color = section.id
                          assign input_id_color_base = 'option-' | append: current_section_id_for_color | append: '-' | append: color_option_object.name | handle | append: '-'
                          assign input_id_color = input_id_color_base | append: color_value_handle

                          assign current_variant_for_swatch = product_to_display.variants | where: 'option1', color_value | first
                          if current_variant_for_swatch == blank and product_to_display.options.size > 1
                            assign current_variant_for_swatch = product_to_display.variants | where: 'option2', color_value | first
                          endif
                          if current_variant_for_swatch == blank and product_to_display.options.size > 2
                            assign current_variant_for_swatch = product_to_display.variants | where: 'option3', color_value | first
                          endif

                          if current_variant_for_swatch == blank
                            assign current_variant_for_swatch = product_to_display.selected_or_first_available_variant
                          endif
                        -%}

                        <div class='color-option-item flex items-center justify-between rounded-2xl border border-[var(--color-heading-gray)]/60 p-3 md:p-4'>
                          <span class='color-option-name text-lg md:text-xl text-color-heading-gray mr-4'>
                            {{ color_value }}
                          </span>
                          <label
                            for='{{ input_id_color }}'
                            class='relative flex items-center size-[50px] md:size-[60px] rounded-full justify-center cursor-pointer transition-all duration-200 ease-in-out hover:scale-105 peer-focus-visible:ring-2 peer-focus-visible:ring-[var(--color-link-blue)] peer-focus-visible:ring-offset-1'
                          >
                            <span
                              class='absolute inset-0 rounded-full gradient-background gradient-{{ current_variant_for_swatch.metafields.utility.radial.handle }}'
                              aria-hidden='true'
                            ></span>

                            <input
                              type='radio'
                              name='options[{{ color_option_object.name | escape }}]'
                              id='{{ input_id_color }}'
                              value='{{ color_value | escape }}'
                              class='sr-only product-option-input peer'
                              data-option-index='option{{ color_option_object.position }}'
                              {% if color_option_object.selected_value == color_value %}
                                checked
                              {% endif %}
                              aria-label='{{ color_value | escape }} fargevalg'
                            >

                            <span
                              class='
                                color-option-dot {{ color_value_handle }} size-5 md:size-6 rounded-full transition-all flex items-center justify-center border border-black/20 z-10
                                peer-checked:scale-125 peer-checked peer-checked:outline-2 peer-checked:outline-offset-2 peer-checked:outline-white
                              '
                              aria-hidden='true'
                            ></span>
                          </label>
                        </div>
                      {% endfor %}
                    </fieldset>
                  </div>
                {% endif %}
                {%- comment %} Fargevalg-blokk SLUTT {%- endcomment %}

                <div class='product-price-section py-4 md:py-6'>
                  <dl class='info-card-pricing'>
                    <dt class='info-card-term-price after:!no-underline' data-product-price-label>
                      <del>
                        {{ 'products.product.price.sale_price' | t | default: 'Pris' }}
                      </del>
                    </dt>
                    <dd
                      class='info-card-value-price text-2xl md:text-3xl font-semibold'
                      data-product-price
                    >
                      {{
                        product_to_display.selected_or_first_available_variant.price
                        | money
                        | replace: '.', ''
                      }}
                    </dd>
                    {%- assign current_variant_for_price = product_to_display.selected_or_first_available_variant -%}
                    {% if current_variant_for_price.compare_at_price > current_variant_for_price.price
                    %}
                      <dt class='info-card-term-compare-price' data-compare-price-label>
                        <del>
                          {{ 'products.product.price.regular_price' | t | default: 'Førpris' }}
                        </del>
                      </dt>
                      <dd class='info-card-value-compare-price' data-compare-price>
                        <del>
                          {{ current_variant_for_price.compare_at_price | money | replace: '.', '' }}
                        </del>
                      </dd>
                    {% else %}
                      <dt class='info-card-term-compare-price hidden' data-compare-price-label></dt>
                      <dd class='info-card-value-compare-price hidden' data-compare-price></dd>
                    {% endif %}
                  </dl>
                </div>
              </div>

              <div class='product-actions-block space-y-4 md:space-y-6 mt-6 md:mt-10'>
                {%- liquid
                  assign current_variant_for_actions = product_to_display.selected_or_first_available_variant
                  assign stock_quantity = current_variant_for_actions.inventory_quantity
                  assign inventory_management = current_variant_for_actions.inventory_management
                  assign inventory_policy = current_variant_for_actions.inventory_policy
                  assign variant_available = current_variant_for_actions.available
                -%}

                <div class='stock-status-container text-right min-h-[26px]'>
                  {% if inventory_management == 'shopify'
                    and inventory_policy == 'deny'
                    and stock_quantity < 20
                    and stock_quantity > 0
                  %}
                    <p
                      class='stock-indicator stock-indicator--low text-xs font-medium text-white bg-[var(--color-utekos-blue)] py-1 px-2.5 rounded-md inline-block'
                      data-stock-indicator
                    >
                      {{ 'products.product.inventory_low_stock' | t: count: stock_quantity }}
                    </p>
                  {% elsif inventory_management == 'shopify'
                    and inventory_policy == 'deny'
                    and stock_quantity <= 0
                    and variant_available == false
                  %}

                  {% else %}
                    <p
                      class='stock-indicator stock-indicator--in-stock text-xs font-medium text-white bg-green-600 py-1 px-2.5 rounded-md inline-block visually-hidden'
                      data-stock-indicator
                    >
                      {{ 'products.product.inventory_in_stock' | t }}
                    </p>
                  {% endif %}
                </div>

                <div class='quantity-selector flex items-center justify-between bg-finance-white p-3 md:p-4 rounded-xl'>
                  <label
                    for='quantity-input-{{ section.id }}'
                    class='quantity-selector__label text-base md:text-lg font-medium text-[var(--color-heading-gray)]'
                  >
                    {{ 'products.product.quantity.label' | t | default: 'Antall' }}
                  </label>
                  <div class='quantity-selector__controls flex items-center gap-x-2'>
                    <button
                      type='button'
                      class='quantity-selector__button quantity-decrease size-8 flex items-center justify-center rounded border border-gray-300 text-[var(--color-heading-gray)] hover:bg-gray-100 focus-visible:ring-2 focus-visible:ring-[var(--color-link-blue)] focus-visible:ring-offset-1 disabled:opacity-50'
                      aria-label='{{ 'products.product.quantity.decrease' | t | default: 'Reduser antall' }}'
                      name='minus'
                    >
                      <span aria-hidden='true'>−</span>
                    </button>
                    <input
                      type='number'
                      name='quantity'
                      id='quantity-input-{{ section.id }}'
                      value='1'
                      min='1'
                      {% if inventory_management == 'shopify'
                        and inventory_policy == 'deny'
                        and variant_available
                      %}
                        max='{{ stock_quantity }}'
                      {% endif %}
                      class='quantity-selector__input w-12 h-8 text-center border-gray-300 rounded text-heading-gray focus:border-link-blue focus:ring-1 focus:ring-link-blue'
                      aria-label='{{ 'products.product.quantity.input_label' | t | default: 'Antall input' }}'
                      data-quantity-input
                    >
                    <button
                      type='button'
                      class='quantity-selector__button quantity-increase size-8 flex items-center justify-center rounded border border-gray-300 text-heading-gray hover:bg-gray-100 focus-visible:ring-2 focus-visible:ring-color-link-blue focus-visible:ring-offset-1 disabled:opacity-50'
                      aria-label='{{ 'products.product.quantity.increase' | t | default: 'Øk antall' }}'
                      name='plus'
                    >
                      <span aria-hidden='true'>+</span>
                    </button>
                  </div>
                </div>

                <div class='product-form__buttons grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4'>
                  <button
                    type='submit'
                    name='add'
                    class='button button--primary w-full py-3 md:py-4 add-to-cart-btn'
                    {% unless variant_available %}
                      disabled
                    {% endunless %}
                    aria-live='polite'
                    data-add-to-cart-button
                  >
                    <span data-add-to-cart-text>
                      {% if variant_available %}
                        {{ 'products.product.add_to_cart' | t | default: 'Legg i handlepose' }}
                      {% else %}
                        {{ 'products.product.sold_out' | t | default: 'Utsolgt' }}
                      {% endif %}
                    </span>
                  </button>

                  <button
                    type='button'
                    class='button button--secondary w-full py-3 md:py-4 popup-trigger-button'
                    data-popup-target='klikkOgHentPopup-{{ section.id }}'
                    aria-haspopup='dialog'
                    aria-controls='klikkOgHentPopup-{{ section.id }}'
                  >
                    {{
                      'products.product.click_and_collect.button_label'
                      | t
                      | default: 'Click & Collect'
                    }}
                  </button>
                </div>

                {% comment %}
                  Popup-diven er plassert her for enkelhet i Liquid-malen.
                  For optimal tilgjengelighet og stacking context, bør JavaScript ideelt sett
                  flytte dette elementet til slutten av <body> når det aktiveres (portal-mønster).
                {% endcomment %}
                <div
                  id='klikkOgHentPopup-{{ section.id }}'
                  class='popup-overlay hidden'
                  role='dialog'
                  aria-modal='true'
                  aria-labelledby='klikkOgHentPopupTitle-{{ section.id }}'
                >
                  <div class='popup-content bg-desert-sand max-w-2xl w-11/12 md:w-full p-4 sm:p-6 rounded-lg shadow-xl relative my-8'>
                    {% comment %} max-w-2xl og w-11/12 for responsiv bredde, my-8 for vertikal sentrering/margin {% endcomment %}
                    <button
                      type='button'
                      class='popup-close-button absolute top-2 right-2 sm:top-3 sm:right-3 p-1 text-2xl text-heading-gray hover:text-black leading-none'
                      aria-label='{{ 'accessibility.close' | t | default: 'Lukk' }}'
                    >
                      <span aria-hidden='true'>×</span>
                    </button>
                    <h2 id='klikkOgHentPopupTitle-{{ section.id }}' class='sr-only'>
                      {{
                        'products.product.click_and_collect.popup_title'
                        | t
                        | default: 'Click & Collect Reservasjon'
                      }}
                    </h2>
                    {% render 'click-collect',
                      product: product_to_display,
                      current_variant: current_variant_for_actions,
                      section_id: section.id
                    %}
                  </div>
                </div>

                {% if variant_available %}
                  <div class='pickup-availability-info space-y-3 mt-3'>
                    <div class='pickup-availability-item flex items-center gap-x-2 sm:gap-x-3 bg-finance-white p-3 md:p-4 rounded-lg text-sm md:text-base'>
                      <span class='svg-wrapper shrink-0'>
                        {{ 'icon-blue-bag.svg' | asset_url | image_tag: '', 'w-5 h-5' }}
                      </span>
                      <span>
                        {{
                          'products.product.click_and_collect.availability_html'
                          | t
                          | default: 'Click & collect – klar til henting innen 1 time'
                        }}
                      </span>
                    </div>
                    <div class='pickup-availability-item flex items-center gap-x-2 sm:gap-x-3 bg-finance-white p-3 md:p-4 rounded-lg text-sm md:text-base'>
                      <span class='svg-wrapper shrink-0'>
                        {{ 'icon-shipping-truck.svg' | asset_url | image_tag: '', 'w-5 h-5' }}
                      </span>
                      <span>
                        {{
                          'products.product.shipping.availability_html'
                          | t
                          | default: 'Sendes innen én virkedag. Leveringstid: 1-3 dager'
                        }}
                      </span>
                    </div>
                  </div>
                {% endif %}
              </div>
              {% comment %} --- Slutt på blokk for antall, knapper, og lagerstatus --- {% endcomment %}

              {% comment %} --- Produktbeskrivelse starter her --- {% endcomment %}
              {%- assign description_metafield = product_to_display.metafields.utekos.product_description -%}
              {% if description_metafield and description_metafield.value != blank %}
                <div
                  class='product-description-container md:my-10 lg:my-16'
                  aria-labelledby='product-description-heading-{{ section.id }}'
                >
                  <h3 id='product-description-heading-{{ section.id }}' class='sr-only'>
                    {{ 'products.product.description_heading' | t | default: 'Produktbeskrivelse' }}
                  </h3>
                  {% comment %} Knapper for "Les mindre" er nå en del av JS-logikken for #setupTruncatedText {% endcomment %}
                  {%- capture description_html -%}
                      {% for desc_object in description_metafield.value %}
                        {% if desc_object.textcontent != blank %}
                          {{ desc_object.textcontent | metafield_tag }}
                        {% endif %}
                      {% endfor %}
                    {%- endcapture -%}
                  <div
                    class='description-content prose prose-sm md:prose-base max-w-none text-heading-gray'
                    data-full-text='{{ description_html | escape }}'
                    data-short-text-length='150'
                    {% comment %} Økt default lengde litt, kan justeres {% endcomment %}
                    id='description-content-{{ section.id }}'
                  >
                    {% comment %} JS vil populere dette basert på data-attributter {% endcomment %}
                  </div>
                  <button
                    class='description-toggle-button text-sm text-[var(--color-link-blue)] hover:underline mt-2'
                    type='button'
                    aria-controls='description-content-{{ section.id }}'
                    aria-expanded='false'
