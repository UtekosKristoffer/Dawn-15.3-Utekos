<section class='-mt-[180px] relative w-full rounded-t-[50px] bg-[length:100%_100%]  flex flex-col items-center justify-center bg-blue-800'>
  <div class='flex flex-col rounded-t-[50px] bg-blue-800 w-full justify-center px-24 py-24'>
    <!-- Tekst -->
    <div class='grid w-full pb-8 gap-[1rem]'>
      <u class='text-4xl pl-[0.1rem] font-base no-underline text-left'>Ikke vent</u>
      <h1 class='text-left font-bold w-full text-[34px]'>
        Utekos™ - Banebrytende utendørsbekledning
      </h1>
      <p class='text-4xl pl-[0.1rem] text-blue-600 max-md:w-1/2 text-left pb-8'>
        Oppdag din nye favoritt og gjør deg klar for eventyr
      </p>
    </div>
    <!-- Bildeområde -->
    <div class='bg-center w-full'>
      <div class='flex items-center max-md:aspect-9/16 aspect-[21/9] rounded-[10px] overflow-hidden backdrop-blur-lg bg-[radial-gradient(200px_300px_ellipse_at_50%_34%_in_oklab,_oklch(75%_0.5_230)_0%,_4%,_oklch(26%_0.12_273)_125%_125%)]'>
        <!-- Hovedbilde -->
        <div class='relative md:right-10 md:align-self-center mx-auto w-[80%]'>
          <picture>
            <source
              media='(max-width: 767px)'
              srcset='https://res.cloudinary.com/doqxtgho6/image/upload/v1746140845/UTEKOS_6_ziayhh.webp'
            >
            <img
              src='https://res.cloudinary.com/doqxtgho6/image/upload/v1746182096/K_L_liggende_beskj%C3%A6rt_1_msw6t5.jpg'
              alt='Image'
              class='aspect-[2/1] max-md:aspect-[9/16] max-md:w-10/12 max-md:ml-12 max-md:mb-24 rounded-[10px]'
              loading='lazy'
              decoding='async'
            >
          </picture>
        </div>
        <div class='absolute h-full ml-[5rem] max-md:w-fit w-3/5 rounded-[10px] overflow-hidden z-10 bg-transparent'>
          <div class='grid bg-transparant w-7/12 relevant text-center mt-[5rem] rounded-xl'>
            <a href='{{ section.settings.page.url }}'>
              <button
                class='text-s w-3/6 place-self-end font-medium ml-[5rem] bg-orange-50 text-white py-[0.8rem] px-[1.4rem] no-underline z-50 rounded-[8px]'
              >
                Se specs
              </button>
            </a>
          </div>

          <img
            src='https://res.cloudinary.com/doqxtgho6/image/upload/v1746212066/Utekos_Skisse_Str_L_mettet_a81kzz.svg'
            alt='Dekor'
            class='w-[40%] object-center aspect-auto rounded-[10px]'
          >
        </div>
      </div>
    </div>

    <!-- Produktkort -->
    <div class='grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-3 md:gap-4 backdrop-blur-md mt-3'>
      {% for block in section.blocks %}
        {% assign link = block.settings.lenke %}

        <a
          href='{{ link.url }}'
          class='grid w-full py-0 px-0 pb-[0.5rem] rounded-[12px] overflow-hidden bg-[radial-gradient(200px_300px_ellipse_at_50%_34%_in_oklab,_oklch(75%_0.5_230)_0%,_4%,_oklch(26%_0.12_273)_125%_125%)] hover:shadow-xl transition'
        >
          <div class='pt-12 px-12 pb-[0.5rem] max-md:py-0 max-md:px-0'>
            <div class='relative aspect-[3/4] max-md:aspect-square rounded-[12px] overflow-hidden'>
              <img
                src='{{ block.settings.bilde | image_url: width: 300 }}'
                alt='{{ block.settings.navn }}'
                class='absolute inset-0 w-full h-full object-cover object-center rounded-[12px] max-md:mx-auto max-md:w-[78%]'
              >
            </div>
          </div>

          <div class='flex flex-col text-white pt-2 pl-2'>
            <div>
              <p class='text-s md:text-m font-medium pt-2'>{{ block.settings.navn }}</p>
              <p class='text-s md:text-m opacity-80 mt-1 line-through'>
                {{ block.settings.forpris }}
              </p>
              <p class='text-s md:text-m opacity-80 mt-1 pb-8'>
                {{ block.settings.pris }}
              </p>
            </div>
            <div class='flex place-self-end place-items-end mr-4 sm:pr-4 md:pr-[1rem] mb-4'>
              <button class='text-m md:text-m py-2 px-12 md:py-[0.6rem] md:px-[2rem] rounded-lg bg-white text-[#0e065c] font-semibold hover:bg-gray-200 transition'>
                Kjøp
              </button>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Catalog",
  "tag": "section",
  "class": "Catalog Section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "Lenke til spesifikasjoner"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Produktkort",
      "settings": [
        {
          "type": "image_picker",
          "id": "bilde",
          "label": "Produktbilde"
        },
        {
          "type": "text",
          "id": "navn",
          "label": "Produktnavn"
        },
        {
          "type": "text",
          "id": "forpris",
          "label": "Førpris"
        },
        {
          "type": "text",
          "id": "pris",
          "label": "Pris"
        },
        {
          "type": "product",
          "id": "lenke",
          "label": "Lenke til produkt"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Produktkort Seksjon",
      "category": "Custom"
    }
  ]
}
{% endschema %}
