{% schema %}
{
  "name": "SizeTable",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Størrelsesguide – Comfyrobe"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Bilde 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Bilde 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Bilde 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Bilde 4"
    }
  ],
  "presets": [
    {
      "name": "Sizetable",
      "category": "Produktinformasjon"
    }
  ]
}
{% endschema %}

<section class='sizetable my-12 px-12 !text-heading-gray'>
  {% if section.settings.heading != blank %}
    <h2 class='text-5xl px-8 ml-4'>{{ section.settings.heading }}</h2>
  {% endif %}
  <div class='section-controller py-12 flex justify-between flex-col md:items-center px-12 md:flex-row'>
    <div class='comfyrobe-images max-sm:hidden'>
      {{ section.settings.image_2 | image_url: width: 500 | image_tag }}
    </div>

    <table class='size-table md:max-w-[55%] md:gap-x-4 comfyrobe-dimensjoner'>
      <colgroup>
        <col style='width: 50%'>
        <col style='width: 16.66%'>
        <col style='width: 16.66%'>
        <col style='width: 16.66%'>
      </colgroup>
      <thead>
        <tr>
          <th>Måling</th>
          <th>XS/S</th>
          <th>M/L</th>
          <th>L/XL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Total lengde (fra HSP til front)</td>
          <td>97 cm</td>
          <td>105 cm</td>
          <td>113 cm</td>
        </tr>
        <tr>
          <td>Glidelåslengde</td>
          <td>85 cm</td>
          <td>90 cm</td>
          <td>95 cm</td>
        </tr>
        <tr>
          <td>Bredde over bryst</td>
          <td>65 cm</td>
          <td>71 cm</td>
          <td>77 cm</td>
        </tr>
        <tr>
          <td>Ermelengde</td>
          <td>57 cm</td>
          <td>63 cm</td>
          <td>66 cm</td>
        </tr>
        <tr>
          <td>Skulderbredde</td>
          <td>53 cm</td>
          <td>62 cm</td>
          <td>71 cm</td>
        </tr>
        <tr>
          <td>Mansjettbredde</td>
          <td>14 1/2cm</td>
          <td>18 cm</td>
          <td>18 1/2cm</td>
        </tr>
        <tr>
          <td>Mansjetthøyde</td>
          <td>6 cm</td>
          <td>6 cm</td>
          <td>6 cm</td>
        </tr>
        <tr>
          <td>Splitt-høyde</td>
          <td>16 cm</td>
          <td>18 cm</td>
          <td>20 cm</td>
        </tr>
        <tr>
          <td>Kragehøyde</td>
          <td>11 cm</td>
          <td>11 cm</td>
          <td>11 cm</td>
        </tr>
        <tr>
          <td>Lommehøyde</td>
          <td>18 cm</td>
          <td>20 cm</td>
          <td>22 cm</td>
        </tr>
        <tr>
          <td>Hettehøyde</td>
          <td>35 cm</td>
          <td>38 cm</td>
          <td>40 cm</td>
        </tr>
        <tr>
          <td>Hettebredde</td>
          <td>27 cm</td>
          <td>30 cm</td>
          <td>32 cm</td>
        </tr>
        <tr>
          <td>Underarmsbredde</td>
          <td>19 cm</td>
          <td>21 cm</td>
          <td>23 cm</td>
        </tr>
        <tr>
          <td>Ermehull</td>
          <td>32 cm</td>
          <td>35 cm</td>
          <td>38 cm</td>
        </tr>
      </tbody>
    </table>
    <div class='comfyrobe-images mt-8 md:hidden'>
      {{ section.settings.image_2 | image_url: width: 500 | image_tag }}
    </div>
  </div>

  {% style %}
    .size-table {
      width: 100%;
      table-layout: fixed;
      border-collapse: collapse;
      font-size: 0.95rem;
      margin-top: 1.5rem;
    }

    .size-table thead {
      background-color: #f5f5f5;
    }

    .size-table th,
    .size-table td {
      border: 1px solid #ccc;
      padding: 0.6rem 0.75rem;
      text-align: center;
      word-wrap: break-word;
      overflow-wrap: break-word;
      display: table-cell;
      vertical-align: middle;
    }

    .size-table tr {
      display: table-row;
    }

    .size-table thead,
    .size-table tbody {
      display: table-header-group;
    }

    .size-table td:first-child {
      text-align: left;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .size-table {
        font-size: 0.85rem;
      }
    }
  {% endstyle %}
</section>
