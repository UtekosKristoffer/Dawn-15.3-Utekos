{%- assign swatch_option_name = 'Farge' -%}
{%- assign swatch_option_object = product.options_with_values
  | where: 'name', swatch_option_name
  | first
-%}

{% if swatch_option_object %}
  <fieldset
    class='color-options-container flex flex-row flex-wrap gap-4 py-4'
    role='radiogroup'
    aria-labelledby='color-selection-heading-{{ section.id }}'
  >
    <legend class='sr-only' id='color-selection-heading-{{ section.id }}'>Velg farge</legend>

    {% for variant in product.variants %}
      {% assign vault = variant.metafields.bridgeFor.Varianthandler.value %}
      {% assign swatch_name = vault.swatch_name.value %}
      {% assign swatch_handle = vault.swatch_handle.value | handle %}
      {% assign swatch_color = vault.background_color.value %}
      {%- assign swatch_index = swatch_option_object.position | minus: 1 -%}

      {% assign input_id = 'option-color-'
        | append: forloop.index
        | append: '-'
        | append: section.id
      %}

      <label
        for='{{ input_id }}'
        class='color-label--{{ swatch_handle }} flex flex-col items-center gap-y-2 cursor-pointer group'
      >
        <input
          type='radio'
          name='options[{{ swatch_option_object.name | escape }}]'
          id='{{ input_id }}'
          value='{{ variant.options[swatch_index] }}'
          class='sr-only peer product-option-input'
          data-option-index='option{{ swatch_option_object.position }}'
          {% if swatch_option_object.selected_value == variant.options[swatch_index] %}
            checked
          {% endif %}
        >
        <span
          class='color-swatch-dot w-10 h-10 rounded-full border border-gray-300 peer-checked:ring-2 peer-checked:ring-offset-2 peer-checked:ring-black transition-all'
          style='background-color: {{ swatch_color }};'
          aria-label='{{ swatch_name }}'
        ></span>
        <span class='color-swatch-name-label text-sm text-center'>
          {{ swatch_name }}
        </span>
      </label>
    {% endfor %}
  </fieldset>
{% endif %}
